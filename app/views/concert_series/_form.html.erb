<%= simple_form_for(concert_series, :html => { :class => 'form-horizontal'} ) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.input :name, :wrapper => :prepend do %>
      <%= content_tag(:span, 'N', :class => 'add-on') %>
      <%= f.input_field :name %>
    <% end -%>

    <% collection = Subscriber::SOURCES.map{ |source| [ source.titleize, source ] } %>
    <%= f.input :source, :prompt => 'Please select a source', :wrapper => :prepend do %>
      <%= content_tag(:span, icon(:shopping_cart), :class => 'add-on') %>
      <%= f.input_field :source, :collection => collection %>
    <% end -%>
  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
<% end %>
