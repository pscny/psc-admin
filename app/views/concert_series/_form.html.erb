<%= simple_form_for(concert_series, :html => { :class => 'form-horizontal'} ) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.input :name, :wrapper => :prepend do %>
      <%= content_tag(:span, 'N', :class => 'add-on') %>
      <%= f.input_field :name %>
    <% end -%>

    <% collection = Season.all.map{ |season| [ season.to_s, season.id ] } %>
    <%= f.input :season_id, :prompt => 'Please select a season', :wrapper => :prepend do %>
      <%= content_tag(:span, icon(:calendar), :class => 'add-on') %>
      <%= f.input_field :season_id, :collection => collection %>
    <% end -%>
  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
<% end %>
