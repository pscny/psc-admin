<h1>Listing subscribers</h1>

<%= form_tag(subscribers_path, :method => 'get', :class => 'form-search') do %>
  <%= search_field_tag(:query, @query, :class => 'input-medium search-query' ) %>
  <%= submit_tag('Search', :class => 'btn' ) %>
<% end %>

<table class='table table-hover table-striped'>
  <thead>
    <tr>
      <th> Name </th>
      <th> Email </th>
    </tr>
  </thead>

  <tbody>
  <% @subscribers.each do |subscriber| %>
    <tr id='<%= element_id(subscriber) -%>'>
      <td><%= link_to subscriber.full_name, edit_subscriber_path(subscriber) %></td>
      <td><%= subscriber.email -%></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= paginate @subscribers %>

<% content_for :actions do -%>
  <li><%= link_to 'New Subscriber', new_subscriber_path %></li>
<% end -%>
