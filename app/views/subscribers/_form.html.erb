<%= simple_form_for(subscriber) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :source, :collection => Subscriber::SOURCES.map(&:titleize), :prompt => 'Please select a source' %>
    <%= f.input :received_at, :input_html => { 'data-behaviour' => 'datepicker' }, :label => 'Date received' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
