<%= simple_form_for(admin, :html => { :class => 'form-horizontal'} ) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.input :name, :wrapper => :prepend do %>
      <%= content_tag(:span, icon(:user), :class => 'add-on') %>
      <%= f.input_field :name %>
    <% end -%>

    <%= f.input :email, :wrapper => :prepend do %>
      <%= content_tag(:span, '@', :class => 'add-on') %>
      <%= f.input_field :email %>
    <% end -%>

    <%= f.input :password, :wrapper => :prepend do %>
      <%= content_tag(:span, icon(:key), :class => 'add-on') %>
      <%= f.input_field :password %>
    <% end -%>

  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
<% end %>
