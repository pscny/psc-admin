<h1><%= @member.full_name %></h1>

<ul class='nav nav-tabs'>
  <li class='active'>
    <%= link_to('Subscriptions', member_subscriptions_path(@member)) -%>
  </li>
</ul>

<div class='tab-content'>
  <div class='tab-pane active'>
    <%= render 'form', :member => @member, :subscription => @subscription %>
  </div>
</div>

<% content_for :actions do -%>
  <li><%= link_to 'Edit', edit_member_path(@member) %></li>
  <li><%= link_to 'Back', members_path %></li>
<% end -%>

<% content_for :subnav do -%>
  <li class='nav-header'>Subscriptions</li>
<% end -%>
